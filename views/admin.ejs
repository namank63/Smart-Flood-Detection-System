<html>

<head>
    <title>Blog App</title>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
</head>

<body>
    <div class="ui fixed inverted menu">
        <div class="ui contaier">
            <div class="header item"><i class="code icon"></i>Blog Site</div>
        </div>
        <a href="/" class="item">Home</a>
        <a href="/blogs/new" class="item">New Post</a>
    </div>
    <div class="ui main text container">
        <div class="ui huge header">RESTful Blog App</div>
        <div class="ui top attached segment">
            <div class="ui divided items">
                <%# blogs.forEach(function(blog){ %>
                    <div class="ui header">
                        <%# blog.title %>
                    </div>
                    <div class="item">
                        <div class="image">
                            <img src="<%# blog.image %>">
                        </div>
                        <div class="content">
                            <a class="header" href="/blogs/<%# blog._id %>"></a>
                            <div class="meta">
                                <span>
                                    <%# blog.created.toDateString() %>
                                </span>
                            </div>
                            <div class="description">
                                <p>
                                    <%# blog.body.substring(0, 100) %>...
                                </p>
                            </div>
                            <div class="extra">
                                <a class="ui floated basic violet button" href="/blogs/<%# blog._id %>">
                                    Read More
                                    <i class="right chevron icon"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <%# }); %>
            </div>
        </div>
    </div>
</body>

</html>